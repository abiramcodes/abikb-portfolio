---
import Social from "../components/Social.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Skills from "../components/Skills.astro";
import { MAIN_SECTION } from "../consts";
import Meetup from "../components/Meetup.astro";
---

<BaseLayout>
  <section class="flex flex-col gap-16">
    <div class="max-w-2xl mx-auto flex flex-col min-w-[42rem]">
      <h1 class="text-xl">Hey!!, I'm Abiram 👋🏻😊</h1>
      {
        MAIN_SECTION.map((section) => {
          return (
            <p class="mt-4 text-lg text-secondary-light dark:text-secondary-dark">
              👉🏻 {section}
            </p>
          );
        })
      }
    </div>
    <div class="prose dark:prose-dark min-w-[42rem] mx-auto">
      <Skills />
    </div>
    <div class="mx-auto w-[42rem]">
      <Meetup />
    </div>

    <div class="mx-auto min-w-[42rem]">
      <Social />
    </div>
  </section>
</BaseLayout>
